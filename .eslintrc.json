{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:lodash/recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "linebreak-style": [
      "warn",
      "windows"
    ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "import",
    "lodash"
  ],
  "settings": {
    "import/resolver": "webpack"
  }
}